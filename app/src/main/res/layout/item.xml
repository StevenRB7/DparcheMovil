<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="512dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPerfilItem"
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/artesania" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomUsuarioItem"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="0dp"
                        android:hint="Nombre usuario"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginEnd="10sp"
                        />

                    <TextView
                        android:id="@+id/txtFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:hint="Fecha"
                        android:textSize="12sp"
                        android:layout_marginEnd="10sp"
                        />

                    <TextView
                        android:id="@+id/txtCate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:hint="Categoria"
                        android:textSize="12sp"
                        android:layout_marginEnd="10sp"
                        />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/itemdescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="descripcion" />

            <ImageView
                android:id="@+id/itemimgPublicacion"
                android:layout_width="371dp"
                android:layout_height="317dp"
                android:layout_margin="6dp"
                android:src="@drawable/galeria" />

            <TextView
                android:id="@+id/cardubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ubicacion"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>