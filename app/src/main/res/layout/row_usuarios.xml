<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewUser"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/azul"
        android:elevation="10dp"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_margin="5dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recy_img_user"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                />

            <TextView

                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="2"
                android:id="@+id/recy_txtuser"
                android:textColor="@color/white"
                android:text="Nombre de usuario"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/btn_add"
                android:textSize="10dp"
                android:layout_marginLeft="25sp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_agregar"
                android:text="agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_send"
                android:textSize="10dp"
                android:layout_marginLeft="15sp"
                android:layout_gravity="center"
                android:backgroundTint="@color/gris"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_agregar"
                android:text="solicitud enviada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_tengosoli"
                android:textSize="10dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorAccent"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_check"
                android:text="aceptar solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_amigos"
                android:textSize="10dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_check"
                android:text="amigos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ProgressBar>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>